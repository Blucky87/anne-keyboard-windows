                                    <Button Name="keyboardButton33" Click="KeyboardColourButton_Click" Margin="179,5,0,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton34" Click="KeyboardColourButton_Click" Margin="210,5,0,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton35" Click="KeyboardColourButton_Click" Margin="241,5,0,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton36" Click="KeyboardColourButton_Click" Margin="272,5,0,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton37" Click="KeyboardColourButton_Click" Margin="303,5,0,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton38" Click="KeyboardColourButton_Click" Margin="334,5,0,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton39" Click="KeyboardColourButton_Click" Margin="365,5,0,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton41" Click="KeyboardColourButton_Click" Margin="396,5,-9.333,5" HorizontalAlignment="Left"  Width="69" Height="30" />

                                    <!-- Hack to get app to build properly -->
                                    <Button Name="keyboardButton40" Click="KeyboardColourButton_Click" Margin="396,5,-9.333,5" HorizontalAlignment="Left"  Visibility="Collapsed" Width="69" Height="30" />
                                </RelativePanel>
                                <RelativePanel Height="40" Margin="0,131,0,80">
                                    <Button Name="keyboardButton42" Click="KeyboardColourButton_Click" Margin="2,5,0,5" HorizontalAlignment="Left"  Width="67"  Height="30" />
                                    <Button Name="keyboardButton43" Click="KeyboardColourButton_Click" Margin="70,5,-4,5" HorizontalAlignment="Left"  Width="30"   Height="30" />
                                    <Button Name="keyboardButton44" Click="KeyboardColourButton_Click" Margin="101,5,-4,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton45" Click="KeyboardColourButton_Click" Margin="132,5,0,5" HorizontalAlignment="Left"  Width="30"  Height="30" />
                                    <Button Name="keyboardButton46" Click="KeyboardColourButton_Click" Margin="163,5,0,5" HorizontalAlignment="Left"  Width="30"  Height="30" />
                                    <Button Name="keyboardButton47" Click="KeyboardColourButton_Click" Margin="194,5,0,5" HorizontalAlignment="Left"  Width="30"  Height="30" />
                                    <Button Name="keyboardButton48" Click="KeyboardColourButton_Click" Margin="225,5,0,5" HorizontalAlignment="Left"  Width="30"  Height="30" />
                                    <Button Name="keyboardButton49" Click="KeyboardColourButton_Click" Margin="256,5,0,5" HorizontalAlignment="Left"  Width="30"  Height="30" />
                                    <Button Name="keyboardButton50" Click="KeyboardColourButton_Click" Margin="287,5,0,5" HorizontalAlignment="Left"  Width="30"  Height="30" />
                                    <Button Name="keyboardButton51" Click="KeyboardColourButton_Click" Margin="318,5,0,5" HorizontalAlignment="Left"  Width="30"  Height="30" />
                                    <Button Name="keyboardButton52" Click="KeyboardColourButton_Click" Margin="349,5,0,5" HorizontalAlignment="Left"  Width="30"  Height="30" />
                                    <Button Name="keyboardButton55" Click="KeyboardColourButton_Click" Margin="380,5,-2,5" HorizontalAlignment="Left"  Width="85"  Height="30" />
                                </RelativePanel>
                                <RelativePanel Height="40" Margin="0,154,0,40">
                                    <Button Name="keyboardButton56" Click="KeyboardColourButton_Click" Margin="2,5,0,5" HorizontalAlignment="Left"  Width="38"  Height="30" />
                                    <Button Name="keyboardButton57" Click="KeyboardColourButton_Click" Margin="41,5,0,5" HorizontalAlignment="Left"  Width="38"  Height="30" />
                                    <Button Name="keyboardButton58" Click="KeyboardColourButton_Click" Margin="80,5,0,5" HorizontalAlignment="Left"  Width="38"  Height="30" />
                                    <Button Name="keyboardButton61" Click="KeyboardColourButton_Click" Margin="119,5,-10,5" HorizontalAlignment="Left"  Width="188"  Height="30" />
                                    <Button Name="keyboardButton66" Click="KeyboardColourButton_Click" Margin="308,5,-12,5" HorizontalAlignment="Left"  Width="38"  Height="30" />
                                    <Button Name="keyboardButton67" Click="KeyboardColourButton_Click" Margin="347,5,-10,5" HorizontalAlignment="Left"  Width="38"  Height="30" />
                                    <Button Name="keyboardButton68" Click="KeyboardColourButton_Click" Margin="386,5,-10,5" HorizontalAlignment="Left"  Width="38"  Height="30" />
                                    <Button Name="keyboardButton69" Click="KeyboardColourButton_Click" Margin="425,5,-12,5" HorizontalAlignment="Left"  Width="40" Height="30" />
                                </RelativePanel>
                            </Grid>

                            <StackPanel Orientation="Vertical" Margin="5,0,0,0" Grid.Row="2">
                                <TextBlock HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" FontSize="14" Text="Colour Picker:" Margin="0,16,0,-16"/>
                                <xcp:Clr_Pckr SelectedColor="GreenYellow" x:Name="colourPicker" Margin="0,10,0,0" colorChanged="colourPicker_colourChanged" MaxHeight="175" MaxWidth="175"  HorizontalAlignment="Left"/>
                    </StackPanel>
                        </StackPanel>
                        <Grid>
                            <Button x:Name="LightSyncButton" Content="Sync Profile" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0, 0, 10, 0" IsEnabled="False" Click="KeyboardSyncButton_Click" Height="32" Width="100" />
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0" Grid.Row="3">
                                    <Button Name="AllKeys" Content="All Keys" VerticalAlignment="Bottom" Margin="10, 0, 0, 0" IsEnabled="True" Click="KeyboardAllButton_Click" Height="32" Width="100" />
                                    <Button Name="WASDKeys" Content="WASD Keys" VerticalAlignment="Bottom" Margin="10, 0, 0, 0" IsEnabled="True" Click="KeyboardWASDButton_Click" Height="32" Width="100" />
                                    <Button Name="IJKLKeys" Content="IJKL Keys" VerticalAlignment="Bottom" Margin="10, 0, 0, 0" IsEnabled="True" Click="KeyboardIJKLButton_Click" Height="32" Width="100" />
                                    <Button Name="NumKeys" Content="Num Row" Margin="10,0, 0, 0" IsEnabled="True" Click="KeyboardNumRowButton_Click" Height="32" Width="100" />
                                    <Button Name="ModifierKeys" Content="Modifiers" Margin="10,0, 0, 0" IsEnabled='True' Click="KeyboardModifiersButton_Click" Height="32" Width="100" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0" Grid.Row="1">
                                    <Button Name="ColourTool" Content="Match a Colour" Margin="10,0, 0, 0" IsEnabled='True' Click="KeyboardColourPickerButton_Click" Height="32" Width="210" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
            <StackPanel Background="Green" Orientation="Horizontal" Grid.Row="2" DataContext="{Binding ElementName=main}"  Margin="0,21,0,0" Height="30px" >
                <TextBlock Text="Status: " Foreground="White" Margin="5,0,0,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="SyncStatus" Text="Waiting for sync..." Margin="10,0,0,0" VerticalAlignment="Center" Foreground="White" />
            </StackPanel>
        </Grid>
    </SplitView>
</Page>