                                    <Button Name="keyboardButton6" Click="KeyboardColourButton_Click" Margin="188,5,-2,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton7" Click="KeyboardColourButton_Click" Margin="219,5,-4,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton8" Click="KeyboardColourButton_Click" Margin="250,5,-5,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton9" Click="KeyboardColourButton_Click" Margin="281,5,-7,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton10" Click="KeyboardColourButton_Click" Margin="312,5,-8,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton11" Click="KeyboardColourButton_Click" Margin="343,5,-9,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton12" Click="KeyboardColourButton_Click" Margin="374,5,-10,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton13" Click="KeyboardColourButton_Click" Margin="405,5,0,5" HorizontalAlignment="Left" Width="60" Height="30" />
                                </RelativePanel>
                                <RelativePanel Height="40" Margin="0,69,0,142">
                                    <Button Name="keyboardButton14" Click="KeyboardColourButton_Click" Margin="2,5,0,5" HorizontalAlignment="Left"  Width="45" Height="30" />
                                    <Button Name="keyboardButton15" Click="KeyboardColourButton_Click" Margin="48,5,-2,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton16" Click="KeyboardColourButton_Click" Margin="79,5,-2,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton17" Click="KeyboardColourButton_Click" Margin="110,5,-4,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton18" Click="KeyboardColourButton_Click" Margin="141,5,-6,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton19" Click="KeyboardColourButton_Click" Margin="172,5,-6,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton20" Click="KeyboardColourButton_Click" Margin="203,5,-6,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton21" Click="KeyboardColourButton_Click" Margin="234,5,-6,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton22" Click="KeyboardColourButton_Click" Margin="265,5,-8,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton23" Click="KeyboardColourButton_Click" Margin="296,5,-10,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton24" Click="KeyboardColourButton_Click" Margin="327,5,-12,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton25" Click="KeyboardColourButton_Click" Margin="358,5,-14,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton26" Click="KeyboardColourButton_Click" Margin="389,5,-14,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton27" Click="KeyboardColourButton_Click" Margin="420,5,-16,5" HorizontalAlignment="Left"  Width="45" Height="30" />
                                </RelativePanel>
                                <RelativePanel Height="40" Margin="0,99,0,109" >
                                    <Button Name="keyboardButton28" Click="KeyboardColourButton_Click" Margin="2,5,0,5" HorizontalAlignment="Left"  Width="52" Height="30" />
                                    <Button Name="keyboardButton29" Click="KeyboardColourButton_Click" Margin="55,5,-2,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton30" Click="KeyboardColourButton_Click" Margin="86,5,-2,5" HorizontalAlignment="Left"  Width="30" Height="30" />
