<Page
    x:Class="AnneProKeyboard.LightingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AnneProKeyboard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xcp="using:Color_Picker"
    mc:Ignorable="d" MinWidth="960" MinHeight="480">

    <SplitView x:Name="splitView" PaneBackground="#FF36393e" IsPaneOpen="True" OpenPaneLength="256" CompactPaneLength="48" DisplayMode="Inline">
        <SplitView.Pane>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid>
                    <TextBlock x:Name="PaneHeader" Foreground="White" Margin="10,12,0,0" Style="{StaticResource BaseTextBlockStyle}" Text="Profiles" FontSize="18"/>
                    <Button BorderThickness="0" Click="ProfileAddButton_Click" Margin="210,12,0,0">
                        <SymbolIcon Symbol="Add" Foreground="White" />
                    </Button>
                </Grid>

                <ListView x:Name="keyboardProfilesList" Margin="0,12,0,0" SelectionMode="None" Grid.Row="1" VerticalAlignment="Stretch" 
                           ItemClick="KeyboardProfiles_ItemClick" IsItemClickEnabled="True" 
                           ItemsSource="{x:Bind KeyboardProfiles}" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Grid.Row="3">
                                <TextBlock Name="ProfileNameTextblock" Text="{Binding Label, UpdateSourceTrigger=PropertyChanged}" Margin="5,0,0,0" Width="140"/>
                                <TextBox Name="ProfileNameTextbox" Visibility="Collapsed" IsEnabled="False" Text="{Binding Label, UpdateSourceTrigger=PropertyChanged}" LostFocus="ProfileNameTextbox_LostFocus"  Margin="5,0,0,0" Background="Transparent" BorderThickness="0" Width="140" TextChanged="ProfileNameChangedEvent_TextChanged" />
                                <Button BorderThickness="0" Tag="{Binding ID}" Margin="5,0,0,0" Click="ProfileEditButton_Click">
                                    <SymbolIcon Symbol="Edit" Foreground="White" />
                                </Button>
                                <Button Name="ProfileDeleteButton" BorderThickness="0" Tag="{Binding ID}"  Margin="10,0,0,0" Click="ProfileDeleteButton_Click">
                                    <SymbolIcon Symbol="Delete" Foreground="White" />
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <StackPanel Background="#303030" Orientation="Horizontal" Grid.Row="3" DataContext="{Binding ElementName=main}"  Margin="0,21,0,0" Height="30px" >
                    <SymbolIcon Symbol="Remote" Margin="6,0,0,0" Foreground="White" />
                    <TextBlock Text="Status: " Foreground="White" Margin="24,0,0,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="connectionStatusLabel" Text="Not Connected" Margin="24,0,0,0" VerticalAlignment="Center" Foreground="Red" />
                </StackPanel>
            </Grid>
        </SplitView.Pane>

        <Grid Background="#36393E">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
                    <StackPanel Orientation="Vertical" Grid.Row="2" Margin="0">
                        <StackPanel Orientation="Horizontal" Grid.Row="2" Height="250" Margin="10,0,0,0">
                            <Grid>
                                <TextBlock HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" FontSize="14" Margin="0,15,0,0">
                                    <Run Text="Keyboard"/>
                                    <Run Text="Lights"/>
                                    <Run Text=":"/>
                                </TextBlock>
                                <RelativePanel Height="40" Margin="0,38,2,172">
                                    <Button Name="keyboardButton0" Click="KeyboardColourButton_Click" Margin="2,5,0,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton1" Click="KeyboardColourButton_Click" Margin="33,5,-2,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton2" Click="KeyboardColourButton_Click" Margin="64,5,-2,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton3" Click="KeyboardColourButton_Click" Margin="95,5,-2,5" HorizontalAlignment="Left"  Width="30" Height="30" />
                                    <Button Name="keyboardButton4" Click="KeyboardColourButton_Click" Margin="126,5,-2,5" HorizontalAlignment="Left"  Width="30" Height="30" />
