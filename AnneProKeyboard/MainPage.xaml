                    <Button Name="keyboardButton34" Content="G" Click="keyboardColourButton_Click" Margin="175,5,0,5" HorizontalAlignment="Left"  Width="28" Height="38"/>
                    <Button Name="keyboardButton35" Content="H" Click="keyboardColourButton_Click" Margin="205,5,0,5" HorizontalAlignment="Left"  Width="28" Height="38"/>
                    <Button Name="keyboardButton36" Content="J" Click="keyboardColourButton_Click" Margin="235,5,0,5" HorizontalAlignment="Left"  Width="28" Height="38"/>
                    <Button Name="keyboardButton37" Content="K" Click="keyboardColourButton_Click" Margin="265,5,0,5" HorizontalAlignment="Left"  Width="28" Height="38"/>
                    <Button Name="keyboardButton38" Content="L" Click="keyboardColourButton_Click" Margin="295,5,0,5" HorizontalAlignment="Left"  Width="28" Height="38"/>
                    <Button Name="keyboardButton39" Content=";" Click="keyboardColourButton_Click" Margin="325,5,0,5" HorizontalAlignment="Left"  Width="28" Height="38"/>
                    <Button Name="keyboardButton40" Content="'" Click="keyboardColourButton_Click" Margin="355,5,0,5" HorizontalAlignment="Left"  Width="28" Height="38"/>
                    <Button Name="keyboardButton41" Content="ENTER" Click="keyboardColourButton_Click" Margin="385,5,-4,5" HorizontalAlignment="Left"  Width="65" Height="38"/>
                </RelativePanel>
                <RelativePanel Height="38" Margin="10,201,244,393" Width="450">
                    <Button Name="keyboardButton43" Content="Shift" Click="keyboardColourButton_Click" Margin="2,5,0,5" HorizontalAlignment="Left"  Width="63"  Height="38"/>
