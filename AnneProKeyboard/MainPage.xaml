                    <Button Name="keyboardButton45" Content="X" Click="keyboardColourButton_Click" Margin="99,5,0,5" HorizontalAlignment="Left"  Width="28" Height="38"/>
                    <Button Name="keyboardButton46" Content="C" Click="keyboardColourButton_Click" Margin="129,5,0,5" HorizontalAlignment="Left"  Width="28"  Height="38"/>
                    <Button Name="keyboardButton47" Content="V" Click="keyboardColourButton_Click" Margin="159,5,0,5" HorizontalAlignment="Left"  Width="28"  Height="38"/>
                    <Button Name="keyboardButton48" Content="B" Click="keyboardColourButton_Click" Margin="189,5,0,5" HorizontalAlignment="Left"  Width="28"  Height="38"/>
                    <Button Name="keyboardButton49" Content="N" Click="keyboardColourButton_Click" Margin="221,5,0,5" HorizontalAlignment="Left"  Width="28"  Height="38"/>
                    <Button Name="keyboardButton50" Content="M" Click="keyboardColourButton_Click" Margin="251,5,0,5" HorizontalAlignment="Left"  Width="28"  Height="38"/>
                    <Button Name="keyboardButton51" Content="," Click="keyboardColourButton_Click" Margin="281,5,0,5" HorizontalAlignment="Left"  Width="28"  Height="38"/>
                    <Button Name="keyboardButton52" Content="." Click="keyboardColourButton_Click" Margin="311,5,0,5" HorizontalAlignment="Left"  Width="28"  Height="38"/>
                    <Button Name="keyboardButton53" Content="?" Click="keyboardColourButton_Click" Margin="341,5,0,5" HorizontalAlignment="Left"  Width="28"  Height="38"/>
                    <Button Name="keyboardButton54" Content="Shift 2" Click="keyboardColourButton_Click" Margin="371,5,-2,5" HorizontalAlignment="Left"  Width="79"  Height="38"/>
                </RelativePanel>
                <RelativePanel Height="38" Margin="10,230,244,364" Width="450">
                    <Button Name="keyboardButton55" Content="LCtrl" Click="keyboardColourButton_Click" Margin="2,5,0,5" HorizontalAlignment="Left"  Width="38"  Height="38"/>
                    <Button Name="keyboardButton56" Content="Win" Click="keyboardColourButton_Click" Margin="42,5,0,5" HorizontalAlignment="Left"  Width="37"  Height="38"/>
                    <Button Name="keyboardButton57" Content="LAlt" Click="keyboardColourButton_Click" Margin="81,5,0,5" HorizontalAlignment="Left"  Width="38"  Height="38"/>
                    <Button Name="keyboardButton58" Content="Space" Click="keyboardColourButton_Click" Margin="120,5,0,5" HorizontalAlignment="Left"  Width="175"  Height="38"/>
                    <Button Name="keyboardButton59" Content="RAlt" Click="keyboardColourButton_Click" Margin="296,5,0,5" HorizontalAlignment="Left"  Width="38"  Height="38"/>
                    <Button Name="keyboardButton60" Content="Fn" Click="keyboardColourButton_Click" Margin="335,5,0,5" HorizontalAlignment="Left"  Width="38"  Height="38"/>
                    <Button Name="keyboardButton61" Content="Context" Click="keyboardColourButton_Click" Margin="374,5,0,5" HorizontalAlignment="Left"  Width="38"  Height="38"/>
                    <Button Name="keyboardButton62" Content="RCtrl" Click="keyboardColourButton_Click" Margin="414,5,-1,5" HorizontalAlignment="Left"  Width="38" Height="38"/>
